<%# SELECT-IMAGE %>
<Row>
  <Cell ss:StyleID="MainTitle"><Data ss:Type="String">項目</Data></Cell>
  <Cell ss:StyleID="MainTitle"><Data ss:Type="String">回答数</Data></Cell>
  <Cell ss:StyleID="MainTitle"><Data ss:Type="String">回答率</Data></Cell>  
</Row>

<% question.answer_items.order("id DESC").each do |answer_item| %>
  <Row>
    <Cell><Data ss:Type="String"><%= answer_item.sentence %></Data></Cell>
    <Cell><Data ss:Type="Number"><%# 回答数 %></Data></Cell>
    <Cell><Data ss:Type="Number"><%# 回答率 %></Data></Cell>
  </Row>
<% end %>
<Row>
  <Cell><Data ss:Type="String">合計</Data></Cell>
  <Cell><Data ss:Type="Number"><%# 回答数の合計 %></Data></Cell>
  <Cell/>
</Row>
